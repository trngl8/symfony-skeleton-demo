{% extends 'themes/default/base.layout.html.twig' %}

{% block title %}Forgot your password?{% endblock %}

{% block main %}

    <div class="container ">
        <div class="row justify-content-md-center">
            <div class="col-md-8">


                <h1 class="mb-4">Forgot your password?</h1>
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.username, {
                    'label': 'Email',
                }) }}
                <small class="mt-3">
                    Enter your email address and we will send you a
                    link to reset your password.
                </small>

                <div class="mt-3">
                    <button class="btn btn-lg btn-primary w-50" type="submit">{{ 'button.reset'|trans }}</button>
                    <a class="btn btn-lg btn-outline-secondary float-end" href="{{ path('login') }}">{{ 'button.cancel'|trans }}</a>
                </div>

                {{ form_end(requestForm) }}

            </div>

        </div>
    </div>

{% endblock %}
