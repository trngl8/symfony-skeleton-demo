{% extends 'meetup/index.html.twig' %}

{% block main %}

<h1>{{ meetup.title }}</h1>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">{{ meetup.title }}</h5>
        <p class="card-text">{{ meetup.plannedAt|date }}</p>
        <form action="{{ url('app_meetup_join', { id: meetup.id }) }}" method="post" data-confirmation="true" id="join-form">
            <input type="hidden" name="token" value="{{ csrf_token('join') }}" />
            <button type="submit" class="btn btn-outline-success">
                Join
            </button>
        </form>
    </div>
</div>

<a href="{{ path('app_meetup_index') }}" class="btn btn-outline-primary">Back to list</a>

{% endblock %}
