{% extends 'base.html.twig' %}

{% block title %}{{ app_name }}{% endblock %}

{% block body %}

    {% if app_navbar == 'true' %}  {# TODO: set boolean value #}
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container"> {# container-fluid #}
            <a class="navbar-brand" href="#"><i class="bi bi-triangle"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_index') }}">{{ 'menu.index'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('topic_index') }}">{{ 'menu.products'|trans }}</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ 'menu.info'|trans }}
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">{{ 'menu.profile'|trans }}</a></li>
                            <li><a class="dropdown-item" href="#">{{ 'menu.configuration'|trans }}</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_info') }}">{{ 'menu.settings'|trans }}</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">{{ 'menu.admin'|trans }}</a>
                    </li>
                </ul>
{#                <form class="d-flex">#}
{#                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="{{ 'menu.search'|trans }}">#}
{#                    <button class="btn btn-outline-success" type="submit">{{ 'menu.ok'|trans }}</button>#}
{#                </form>#}
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <a class="btn btn-sm btn-link" href="{{ path('logout') }}">Logout</a>
                {% else %}
                    <a class="btn btn-sm btn-link" href="{{ path('login') }}">Login</a>
                {% endif %}
{#                <a class="btn btn-sm btn-outline-secondary ms-lg-2" href="{{ path('app_subscribe') }}"><i class="bi bi-person"></i></a>#}

            </div>
        </div>
    </nav>
    {% endif %}

    <div class="container">
