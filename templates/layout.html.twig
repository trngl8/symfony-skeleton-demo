            </a>

            <ul class="nav">
                <li class="nav-item"><a href="{{ path('app_index') }}" class="nav-link {% if app.request.get('_route') == 'app_index' %}active{% endif %}" aria-current="page">{{ 'menu.index'|trans }}</a></li>
                <li class="nav-item"><a href="{{ path('app_subscribe') }}" class="nav-link {% if app.request.get('_route') == 'app_subscribe' %}active{% endif %}">{{ 'menu.products'|trans }}</a></li>
            </ul>
        </header>
    </div>

    <div class="container">
        <main>

            {% block breadcrumbs %}
            {% endblock %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-secondary" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {% block add_flashes %}
            {% endblock %}

            {% block main %}
            {% endblock %}
        </main>
    </div>

    <div class="container">
        <footer class="pt-3 my-5 text-muted border-top">
            <small>{{ 'message.created'|trans }} {{ app_name }} {{ app_version }} &middot; &copy;</small>
        </footer>
    </div>


{% endblock %}
