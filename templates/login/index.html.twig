{% extends 'layout.html.twig' %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_index') }}">{{ 'brcmbs.home'|trans }}</a></li>
            <li class="breadcrumb-item" aria-current="page">{{ 'title.login'|trans }}</li>
        </ol>
    </nav>
{% endblock %}

{% block add_flashes %}
    {% if error %}
        <div class="alert alert-warning" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
{% endblock %}

{% block main %}
    <h1 class="mb-4">{{ 'title.login'|trans }}</h1>

    <div class="row">
        <div class="col-md-6">

            <form action="{{ path('login') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div id="login">
                    <div class="mb-3">
                        <label for="username" class="form-label required">{{ 'form.label.email'|trans }}</label>
                        <input type="text" id="username" name="_username" required value="{{ last_username }}" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label required">{{ 'form.label.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required class="form-control" />
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" id="subscribe_agree" name="_remember_me" class="form-check-input" value="1" />
                            <label class="form-check-label required" for="subscribe_agree">{{ 'form.label.remember_me'|trans }}</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <button type="submit" id="login" name="login" class="btn btn-lg btn-primary">{{ 'button.login'|trans }}</button>
                            <a href="{{ path('app_forgot_password_request') }}" class="btn btn-link">{{ 'link.forgot_password'|trans }}</a>
                        </div>
                    </div>
                </div>
            </form>

