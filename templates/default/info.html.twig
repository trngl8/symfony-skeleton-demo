{% extends 'layout.html.twig' %}

{% block simple_navbar %}
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="{{ path('app_index') }}" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                {#                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>#}
                <img src="{{ asset('favicons/favicon.svg') }}" width="40" height="32" alt="">
                {#                <span class="fs-4">Simple header</span>#}
            </a>

            <ul class="nav nav-pills">
                <li class="nav-item"><a href="{{ path('app_index') }}" class="nav-link">Home</a></li>
                <li class="nav-item"><a href="{{ path('app_project') }}" class="nav-link">Projects</a></li>
                <li class="nav-item"><a href="{{ path('app_info') }}" class="nav-link active" aria-current="page">About</a></li>
            </ul>
        </header>
    </div>
{% endblock %}

{% block main %}
    <h1 class="mb-4">{{ 'title.info'|trans }}</h1>

    <div class="row">
        <div class="col-md-6">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Name:</b> {{ app_name }}</li>
                <li class="list-group-item"><b>Version:</b> {{ app_version }}</li>
                <li class="list-group-item"><b>Environment:</b> {{ app.environment|upper }}</li>
                <li class="list-group-item"><b>Debug:</b> {{ app.debug ? 'Yes' : 'No' }}</li>
            </ul>
        </div>
    </div>
{% endblock %}
