{% extends 'admin.html.twig' %}

{% block title %}{{ 'title.product'|trans }}{% endblock %}

{% block page_title %}
    <h1 class="mt-4">{{ 'title.product'|trans }}</h1>
{%endblock%}

{% block breadcrumb %}
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'menu.dashboard'|trans }}</a></li>
        <li class="breadcrumb-item active">{{ 'menu.products'|trans }}</li>
    </ol>
{% endblock %}


{% block main %}

    {% if items is defined and items|length > 0 %}
        <table class="table">
            <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Parent</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Level</th>
                <th scope="col">{{ 'actions'| trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>
                        {% if item.parent %}
                            <a href="{{ path('admin_product_show', { id: item.parent.id }) }}">{{ item.parent }}</a>
                        {% endif %}
                    </td>
                    <td><a href="{{ path('admin_product_show', { id: item.id }) }}">{{ item.title }}</a></td>
                    <td>{{ item.description|u.truncate(48, '...') }}</td>
                    <td>{{ item.level }}</td>
                    <td>
                        <a href="{{ path('admin_product_show', { id: item.id }) }}" class="btn btn-sm btn-outline-secondary">{{ 'button.show'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if button is defined %}
        <a href="{{ path('admin_product_add') }}" class="btn btn-outline-primary">{{ 'button.add'|trans }}</a>
    {% endif %}

{% endblock %}
