<!DOCTYPE html>
<html lang="{{ app.request.locale }}"  class="h-100">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/svg+xml" href="{{ asset('favicons/favicon.svg') }}">
    <link rel="alternate icon" type="image/png" sizes="16x16" href="{{ asset('favicons/favicon16x16.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicons/apple-touch-icon.png') }}" />

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock stylesheets %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock javascripts %}

</head>

{% block body_outside %}
<body class="d-flex h-100 text-center text-white bg-dark">
    {% block body %}
        <!-- Modal -->
        <div class="modal fade text-black" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="loginModalLabel">{{ 'title.login'|trans }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'label.close'|trans }}"></button>
                    </div>
                    <div class="modal-body text-start">
                        <p>{{ 'messages.run_agree'|trans }}?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'button.close'|trans }}</button>
                        <button type="button" class="btn btn-primary">{{ 'button.ok'|trans }}</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
            <header class="mb-auto">
                <div class="text-end">
{#                    <h3 class=""><a href="{{ path('login') }}" class="btn btn-sm btn-outline-secondary" title="{{ 'login'|trans }}" data-bs-toggle="modal" data-bs-target="#CHOSE_MODEL"><i class="bi bi-person"></i></a></h3>#}
                </div>
            </header>

            <main class="px-3" data-controller="hello">
                <div class="logo"><i class="bi bi-triangle-half"></i></div>
                <h1 class="mb-5">{{ app_name }} <small>{{ app_version }}</small></h1>
                <p class="lead" data-hello-target="output">{{ 'title.text.default_content'|trans }}</p>
                <p class="lead mt-5">
                    <a href="{{ path('login') }}" class="btn btn-lg btn-outline-primary fw-bold px-lg-5" title="button.blue.title" data-hello-target="name" data-action="click->hello#greet">{{ 'button.blue'|trans }}</a>
                    <a href="{{ path('app_index') }}" class="btn btn-lg btn-outline-danger fw-bold px-lg-5" title="button.red.title">{{ 'button.red'|trans }}</a>
                </p>
            </main>

            <footer class="mt-auto text-white-50">
                <p>Owners by <a href="https://" class="text-white">{{ app_name }}</a> {{ app_version }} ({{ app.environment|upper }}).</p>
            </footer>
        </div>
    {% endblock %}
</body>
{% endblock %}

<!-- Page rendered on {{ 'now'|format_datetime('long', 'long', '', 'UTC') }} -->

</html>
